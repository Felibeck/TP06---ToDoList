<header class="main-header">
    <a href='@Url.Action("Index", "Home")' class="header-title">To Do List</a>
    <nav class="header-actions">
        <a href='@Url.Action("logOut", "Account")'>
            <img src="/Imagenes/logOutImagen.png" alt="Log Out">
        </a>
    </nav>
</header>

<section class="login-container">
    <h1 class="login-title">Log In</h1>

    <div class="login-box">
        <form action='@Url.Action("guardarLogin", "Account")' method="POST" enctype="multipart/form-data" class="login-form">

            <div class="form-group">
                <label for="username">Username</label>
                <input id="username" type="text" name="username" placeholder="Ingrese su usuario" required/>
            </div>

            <div class="form-group">
                <label for="password">Password</label>
                <input id="password" type="password" name="password" placeholder="Ingrese su contraseÃ±a" required/>
            </div>

            <div class="form-actions">
                <input type="submit" value="Ingresar" class="btn btn-primary"> 
            </div>
        </form>
    </div>
</section>
