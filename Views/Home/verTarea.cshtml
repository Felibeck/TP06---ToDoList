<header class="main-header">
    <a href='@Url.Action("Index", "Home")' class="header-title">To Do List</a>
    <nav class="header-actions">
        <a href='@Url.Action("logOut", "Account")'>
            <img src="/Imagenes/logOutImagen.png" alt="Log Out">
        </a>
    </nav>
</header>

<main class="main-verTarea">
    <h1>Informaci√≥n de la tarea</h1>
    <a href='@Url.Action("verTareas", "Home")' class="btn btn-primary">Volver</a>

    <div class="task-detail">
        <h2>@ViewBag.Tarea.titulo</h2>
        <p>@ViewBag.Tarea.descripcion</p>
        <p><strong>Fecha:</strong> @ViewBag.Tarea.fecha</p>
        <p><strong>Estado:</strong> @ViewBag.Tarea.finalizada</p>

        <div class="task-actions">
            <a href='@Url.Action("eliminarTarea", "Home", new {idTarea=ViewBag.Tarea.ID})' class="btn btn-danger">Eliminar Tarea</a>
            <a href='@Url.Action("modificarTarea", "Home")' class="btn btn-primary">Modificar Tarea</a>
        </div>
    </div>
</main>
