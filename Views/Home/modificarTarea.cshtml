<header class="main-header">
    <a href='@Url.Action("Index", "Home")' class="header-title">To Do List</a>
    <nav class="header-actions">
        <a href='@Url.Action("logOut", "Account")'>
            <img src="/Imagenes/logOutImagen.png" alt="Log Out">
        </a>
    </nav>
</header>

<main class="main-modificarTarea">
    <a href='@Url.Action("verTareas", "Home")' class="btn btn-primary">Volver</a>

    <h1>Modificar Tarea</h1>

    <form action='@Url.Action("modificarTarea", "Home")' method="POST" enctype="multipart/form-data" class="task-form">

        <div class="form-group">
            <input type="text" name="titulo" placeholder="Título" required/>
        </div>

        <div class="form-group">
            <input type="text" name="descripcion" placeholder="Descripción" required/>
        </div>

        <div class="form-group">
            <input type="date" name="fecha" required/>
        </div>

        <div class="form-group">
            <label><input type="radio" name="finalizado" value="Finalizado"/> Finalizado</label>
            <label><input type="radio" name="finalizado" value="Por hacer"/> Por hacer</label>
        </div>

        <div class="form-actions">
            <input type="submit" value="Modificar tarea" class="btn btn-primary"/>
        </div>
    </form>
</main>
